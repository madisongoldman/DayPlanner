<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.com.example.android.newdayplanner.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day Planner"
        android:textSize="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-thin"
        android:layout_weight="10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClick"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:src="@drawable/blackflowericon"/>

        <View
            android:layout_width="2dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:background="#FF4081" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="To-Do List"
            android:id="@+id/toDoList"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FF4081"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClick"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:src="@drawable/blackflowericon"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#FF4081" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Daily Checklists"
            android:id="@+id/dailyChecklist"
            android:fontFamily="sans-serif-light"
            android:layout_margin="10dp"
            android:textSize="20sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FF4081"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClick"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:src="@drawable/blackflowericon"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="#FF4081" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Important Dates"
            android:id="@+id/importantDates"
            android:fontFamily="sans-serif-light"
            android:layout_margin="10dp"
            android:layout_marginTop="25dp"
            android:textSize="20sp"/>

    </LinearLayout>


</LinearLayout>
</ScrollView>